
config defaults
	option syn_flood '1'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'REJECT'
	option drop_invalid '0'

config include
	option path '/etc/firewall.user'

config zone 'zone_freifunk'
	option name 'freifunk'
	option network 'mgmt mesh_sama'


config zone 'zone_dhcp'
        option name 'dhcp'
        option network 'dhcp'


config forwarding
	option dest 'freifunk'
	option src 'freifunk'

config forwarding
	option dest 'freifunk'
	option src 'dhcp'

config rule
	option name 'DSCP olsr'
	list proto 'udp'
        option dest 'freifunk'
	option dest_port '698'
	option target 'DSCP'
	option set_dscp 'EF'

