
config LoadPlugin
	option accept '0.0.0.0'
	option library 'olsrd_txtinfo'
	option port '2006'

config LoadPlugin
	option library 'olsrd_arprefresh'

config LoadPlugin
	option library 'olsrd_nameservice'
	option suffix '.olsr'
	option hosts_file '/tmp/hosts/olsr'
	option latlon_file '/var/run/latlon.js'
	option services_file '/var/etc/services.olsr'

config LoadPlugin
	option accept '0.0.0.0'
	option library 'olsrd_jsoninfo'
	option ignore '0'

config LoadPlugin
	option library 'olsrd_watchdog'
	option file '/var/run/olsrd.watchdog'
	option interval '30'

config LoadPlugin
	option library 'olsrd_dyn_gw'
	list Ping '46.182.19.48'
	list Ping '80.67.169.40'
	list Ping '194.150.168.168'
	option ignore '0'
	option PingCmd 'ping -c 1 -q -I ffuplink %s'
	option PingInterval '30'

config olsrd
	option IpVersion '4'
	option FIBMetric 'flat'
	option AllowNoInt 'yes'
	option TcRedundancy '2'
	option NatThreshold '0.75'
	option LinkQualityAlgorithm 'etx_ff'
	option SmartGateway 'no'
	option SmartGatewayThreshold '50'
	option Pollrate '0.025'
	option RtTable '256'
	option RtTableDefault '256'
	option SmartGatewaySpeed '45000 200000'
	option SmartGatewayUplink 'both'
	option LinkQualityLevel '2'
	option OlsrPort '698'
	option Willingness '3'
	option TosValue '16'

config InterfaceDefaults
	option MidValidityTime '500.0'
	option TcInterval '2.0'
	option HnaValidityTime '125.0'
	option HelloValidityTime '125.0'
	option TcValidityTime '500.0'
	option Ip4Broadcast '255.255.255.255'
	option MidInterval '25.0'
	option HelloInterval '3.0'
	option HnaInterval '10.0'

# Uplink via Sama is much faster
config Interface
        option ignore '0'
        option interface 'mesh_zwingli'
        option Mode 'ether'
	list LinkQualityMult 'default 0.5'


config Interface
	option ignore '0'
	option interface 'mesh_sama'
	option Mode 'ether'

config Hna4
	option netmask '255.255.255.192'
	option netaddr '10.36.194.128'

config Hna4
	option netmask '255.255.255.224'
	option netaddr '10.31.52.160'
